<?xml version="1.0"?>
<robot name="wheel" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="wheel_radius" value="0.0725"/>
  <xacro:property name="wheel_length" value="0.0575"/>
  <xacro:property name="wheel_mass" value="0.005"/>
  <xacro:property name="wheels_y_offset" value="0.09"/>

  <xacro:macro name="wheel" params="prefix:=^ side:=^ end:=^">
    <link name="${prefix}${end}_${side}_wheel">
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="${wheel_mass}"/>
        <inertia ixx="0.006434" iyy="0.003644" izz="0.003644"
                 ixy="0.0" iyz="0.0" ixz="0.0"/>
      </inertial>

      <visual>
        <!-- Rotate mesh so tread pattern faces outward -->
        <xacro:if value="${side == 'left'}">
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi}"/>
        </xacro:if>
        <xacro:if value="${side == 'right'}">
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:if>
        <geometry>
          <mesh scale="0.1 0.1 0.1" filename="file://$(find perseus_lite_description)/meshes/wheel.dae"/>
        </geometry>
      </visual>

      <collision>
        <!-- Rotate cylinder 90Â° around X to align with Y axis (wheel axle) -->
        <origin xyz="0.0 0.0 0.0" rpy="${pi/2} 0.0 0.0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
      </collision>
    </link>

    <!-- WHEEL JOINT -->
    <joint name="${prefix}${end}_${side}_wheel_joint" type="continuous">
      <parent link="${prefix}${end}_${side}_motor"/>
      <child link="${prefix}${end}_${side}_wheel"/>
      <xacro:if value="${side == 'left'}">
        <origin xyz="0.0 ${wheels_y_offset} 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 -1 0"/>
      </xacro:if>
      <xacro:if value="${side == 'right'}">
        <origin xyz="0.0 ${-wheels_y_offset} 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
      </xacro:if>
      <dynamics damping="0.2" friction="0.3"/>
    </joint>
  
  <transmission name="${prefix}${end}_${side}_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}${end}_${side}_wheel_joint">
        <command_interface name="velocity"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/> 
        <state_interface name="temperature"/>
      </joint>
      <actuator name="${prefix}${end}_${side}_wheel_motor">
        <mechanical_reduction>1.0</mechanical_reduction>
      </actuator>
    </transmission>

  </xacro:macro>
</robot>