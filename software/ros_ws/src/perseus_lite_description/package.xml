<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>perseus_lite_description</name>
  <version>0.1.0</version>
  <description>Package containing description for Perseus Lite robot</description>
  <maintainer email="1388693+DingoOz@users.noreply.github.com">Nigel_H-S</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <!-- Add build testing dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>

  <!-- Make some exec_depends into full depends since they're needed at build time -->
  <depend>urdf</depend>
  <depend>xacro</depend>
  <depend>perseus_description</depend>
  
  <exec_depend>robot_state_publisher</exec_depend>
  <exec_depend>joint_state_publisher</exec_depend>
  <exec_depend>joint_state_publisher_gui</exec_depend>
  <exec_depend>rviz2</exec_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>