<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>perseus_simulation</name>
  <version>0.0.1</version>
  <description>Package for simulating the Perseus rover using Gazebo.</description>

  <maintainer email="59348282+RandomSpaceship@users.noreply.github.com">james</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <!-- base -->
  <exec_depend>perseus</exec_depend>

  <!-- simulation -->
  <exec_depend>ros_gz_sim</exec_depend>
  <exec_depend>ros_gz_bridge</exec_depend>
  <exec_depend>ros_gz_image</exec_depend>
  <exec_depend>ros_gz_interfaces</exec_depend>
  <exec_depend>gz_ros2_control</exec_depend>

  <!-- testing -->
  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>yaml-cpp-vendor</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
